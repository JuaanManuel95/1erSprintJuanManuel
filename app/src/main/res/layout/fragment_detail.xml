<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.Fragments.DetailFragment"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_layout"
        android:id="@+id/toolbarFragmentDetail"/>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:id="@+id/fragmentDetailImageView"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/favoritesFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:src="@drawable/ic_favorite_border_black_24dp"
        android:tint="#FFF"
        app:fabSize="normal"
        android:backgroundTint="#E40A0A"
        app:layout_anchorGravity="bottom|right"
        app:maxImageSize="40dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="#EF5350"
        android:id="@+id/fragmentDetailTextViewNombreProducto" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="#FAF4F4"
        android:textAlignment="center"
        android:id="@+id/fragmentDetailTextViewPrecioProducto"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:id="@+id/framentDetailTextViewDescripcionProducto"
        android:layout_marginTop="60dp"
        android:textStyle="italic"/>



</LinearLayout>